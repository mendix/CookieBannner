<?xml version="1.0" encoding="utf-8" ?>
<widget id="CookieCuttr.widget.CookieCuttr" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
  <name>Cookie Cuttr</name>
  <description>CookieCuttr</description>

  <icon>

  </icon>

  <properties>

        <property key="cookieMessage" type="string" multiline="true" defaultValue="" >
            <caption>Message</caption>
            <category>Data source</category>
            <description>edit the message you want to appear in the cookie bar, remember to keep the {{cookiePolicyLink}} variable in tact so it inserts your privacy policy link.</description>
        </property>
        <property key="cookiePolicy" type="string" required="false">
            <caption>Policy link</caption>
            <category>Cookie policy</category>
            <description>if applicable, enter the link to your privacy policy in here - this is as soon as cookieAnalytics is set to false</description>
        </property>
        <property key="declineCookies" type="boolean" defaultValue="false">
            <caption>Decline button</caption>
            <category>Buttons</category>
            <description>if youâ€™d like a decline button to (ironically) write a cookie into the browser then set this to true.</description>
        </property>
        <property key="cookieDeclineButtonText" type="string" defaultValue="Decline">
            <caption>Decline button text</caption>
            <category>Buttons</category>
            <description>you can change the text of the red decline button.</description>
        </property>
        
        <property key="cookieAcceptButton" type="boolean" required="true" defaultValue="true">
            <caption>Accept Button</caption>
            <category>Buttons</category>
            <description>set this to true to hide the accept button, its set to false by default</description>
        </property>
        <property key="cookieAcceptButtonText" type="string" required="false" defaultValue="Accept">
            <caption>Accept Button Text</caption>
            <category>Buttons</category>
            <description>you can change the text of the green accept button.</description>
        </property>

         <property key="cookieOverlayEnabled" type="boolean" required="true" defaultValue="false">
            <caption>Enable overlay</caption>
            <category>Behaviour</category>
            <description>don't want a discreet toolbar? this makes the whole message into a 100% height</description>
        </property>
         <property key="cookieNotificationLocationBottom" type="boolean" required="true" defaultValue="false">
            <caption>Location bottom</caption>
            <category>Behaviour</category>
            <description>this is false by default, change it to true and the cookie notification bar will show at the bottom of the page instead, please note this will remain at the top for mobile and iOS devices and Internet Explorer 6.</description>
        </property>
        <property key="cookiePolicyPage" type="boolean" required="true" defaultValue="false">
            <caption>Enable cookie policy page</caption>
            <category>Cookie policy</category>
            <description>set this to true to display the message you want to appear on your privacy or cookie policy page.</description>
        </property>
        
        <property key="cookiePolicyPageMessage" type="string" required="false" multiline="true">
            <caption>Cookie policy message</caption>
            <category>Cookie policy</category>
            <description>edit the message you want to appear on your policy page</description>
        </property>
                <property key="cookieDiscreetLink" type="boolean" required="true" defaultValue="false">
            <caption>Enable discreet box</caption>
            <category>Cookie discreet</category>
            <description>false by default, set to true to enable.</description>
        </property>
        <property key="cookieDiscreetLinkText" type="string" required="false" multiline="true">
            <caption>Discreet text</caption>
            <category>Cookie discreet</category>
            <description>edit the text you want to appear on the discreet option.</description>
        </property>
        <property key="cookieDiscreetPosition" type="enumeration" required="true" defaultValue="topright">
            <caption>Position</caption>
            <category>Cookie discreet</category>
            <description>set to topleft by default, you can also set topright, bottomleft, bottomright.</description>
            <enumerationValues>
                        <enumerationValue key='topleft'>Top Left</enumerationValue>
                        <enumerationValue key='topright'>Top Right</enumerationValue>
                        <enumerationValue key='bottomright'>Bottom Right</enumerationValue>
                        <enumerationValue key='bottomleft'>Bottom Left</enumerationValue>
                </enumerationValues>
        </property>

        <property key="cookiePlacement" type="string" required="false">
            <caption>Place above ID</caption>
            <category>Behaviour</category>
            <description>Leave blank to append to body. Otherwise add the ID name of the element you want the cookie to be appended to.</description>
        </property>
        

        

        
    </properties>
</widget>